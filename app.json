{
  "name": "Bitwardenrs-Heroku",
  "description": "Bitwardenrs on Heroku with Postgresql",
  "repository": "https://github.com/std2main/bitwardenrs_heroku",
  "website": "https://github.com/std2main/bitwardenrs_heroku",
  "keywords": ["bitwarden", "postgresql", "password", "otp"],
	"env": {
	  "DOMAIN": {
			"description": "Domain of this site, like https://APPNAME.herokuapp.com",
			"value": "https://APPNAME.herokuapp.com"
		},
		"SINGUP_ALLOWED": {
			"description": "Allow singup? true or false",
			"value": "false"
		},
		"ENABLE_ADMIN": {
			"description": "Enable /admin access or not",
      "value": "false"
		},
		"RSA_CONTENT": {
			"description": "Content of rsa keys, see more at https://github.com/std2main/bitwardenrs_heroku/blob/main/tools/set_heroku_rsa.sh",
      "value": "",
      "required": false
		},
    "GEN_ADMIN_TOKEN": {
      "description": "Autogenerated Admin token",
      "generator": "secret"
    }
	},
  "addons": [
     "heroku-postgresql:hobby-dev"
   ],
  "stack": "container"
}
